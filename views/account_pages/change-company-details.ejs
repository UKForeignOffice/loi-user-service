<% pageTitle = "Change company details - Get a document legalised – GOV.UK" %>

<%if(error_report && error_report.length>0){
    pageTitle = "Error: Change company details - Get a document legalised – GOV.UK"
} %>

<% include ../partials/header.ejs %>
<a href="/api/user/account" class="back_to_previous_button">Back</a>
<div class="column-two-thirds">
    <h1 class="heading-xlarge">Change company details</h1>
    <form action="/api/user/change-company-details" method="post" id="change-company-details">

        <div class="govuk-error-summary <% if (error_report) { %>show<% } else { %>hide<% } %>" role="group" aria-labelledby="error-summary-heading-example-2" tabindex="-1" autofocus>

            <p class="govuk-error-summary__title" id="error-summary-heading-example-2" autofocus>
                There is a problem
            </p>

            <div id="all-errors">
                <% if (error_report) { console.log(error_report);%>
                <% error_report[0][0].errMsgs.forEach( function(errorMsgs) { %>
                <p><%= errorMsgs.fieldError %></p>
                <% }) %>
                <% } %>

                <ul class="govuk-list govuk-error-summary__list">
                    <% if (error_report) {  %>
                    <% error_report[0][0].errMsgs.forEach( function(errorMsgs) { %>
                    <li><a href="#legend_<%= errorMsgs.questionId %>"><%= errorMsgs.fieldSolution %></a></li>
                    <% }) %>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="form-group <% if (error_report && error_report[1][0].erroneousFields.indexOf('company_name')>-1) { %>error<% } %>">

            <label for="company-name" class="form-label-bold">Company name</label>
            <fieldset>
                <legend id="legend_compnay_name" class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('company_name')>-1) { %>show<% } else { %>hide<% } %>">

                    <% if (error_report) { %>
                    <% error_report[0][0].errMsgs.forEach( function(error) { %>
                    <% if (error.questionId=="company_name") { %>
                    <span class="error-message">
                       <%= error.fieldSolution %>
                    </span>
                    <% } %>
                    <% }) %>
                    <% } %>


                </legend>
                <input class="form-control" id="company-name" type="text" autocomplete="off" aria-required="true"  name="company_name" value="<% if(form_values){%><%=form_values.company_name%><%} %>">
            </fieldset>
        </div>
        <button class="govuk-button" type="submit">Save</button>
    </form>

</div>

<% include ../partials/footer.ejs %>
