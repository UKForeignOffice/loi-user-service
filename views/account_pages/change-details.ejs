<% pageTitle = "Change personal details - Get a document legalised â€“ GOV.UK" %>
<% include ../partials/header.ejs %>
<a href="/api/user/account" class="back_to_previous_button">Back</a>
<div class="column-two-thirds">
    <h1 class="heading-xlarge">Change personal details</h1>
    <form action="/api/user/change-details" method="post" id="change-details">

        <div class="error-summary <% if (error_report) { %>show<% } else { %>hide<% } %>" role="group" aria-labelledby="error-summary-heading-example-2" tabindex="-1">

            <p class="heading-medium error-summary-heading" id="error-summary-heading-example-2">
                Please check the form
            </p>

            <div id="all-errors">
                <ul class="error-summary-list nopadding">
                    <% if (error_report) {  %>
                    <% error_report[0][0].errMsgs.forEach( function(errorMsgs) { %>
                    <li><a href="#legend_<%= errorMsgs.questionId %>"><%= errorMsgs.fieldSolution %></a></li>
                    <% }) %>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="form-group <% if (error_report && error_report[1][0].erroneousFields.indexOf('first_name')>-1) { %>error<% } %>">
            <label for="first-name" class="form-label-bold">First name</label>
            <fieldset class="inline">
                <legend id="legend_first_name" class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('first_name')>-1) { %>show<% } else { %>hide<% } %>">

                    <% if (error_report) { %>
                    <% error_report[0][0].errMsgs.forEach( function(error) { %>
                    <% if (error.questionId=="first_name") { %>
                    <span class="error-message">
                       <%= error.fieldSolution %>
                    </span>
                    <% } %>
                    <% }) %>
                    <% } %>


                </legend>
                <input class="form-control" id="first-name" type="text" autocomplete="off" name="first_name" aria-required="true"  value="<% if(form_values){%><%=form_values.first_name%><%} %>">
            </fieldset>
        </div>
        <div class="form-group <% if (error_report && error_report[1][0].erroneousFields.indexOf('last_name')>-1) { %>error<% } %>">
            <label for="last-name"  class="form-label-bold">Last name</label>
            <fieldset>
                <legend id="legend_last_name" class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('last_name')>-1) { %>show<% } else { %>hide<% } %>">
                    <% if (error_report) { %>
                    <% error_report[0][0].errMsgs.forEach( function(error) { %>
                    <% if (error.questionId=="last_name") { %>
                    <span class="error-message">
                       <%= error.fieldSolution %>
                    </span>
                    <% } %>
                    <% }) %>
                    <% } %>
                </legend>
                <input class="form-control" id="last-name" autocomplete="off" type="text" name="last_name" aria-required="true" value="<% if(form_values){%><%=form_values.last_name%><%} %>">
            </fieldset>
        </div>
        <div class="form-group <% if (error_report && error_report[1][0].erroneousFields.indexOf('telephone')>-1) { %>error<% } %>">
            <label for="phone" class="form-label-bold">Telephone number</label>
            <span class="form-hint">Can be landline or mobile</span>
            <fieldset>
                <legend id="legend_telephone" class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('telephone')>-1) { %>show<% } else { %>hide<% } %>">
                    <% if (error_report) { %>
                    <% error_report[0][0].errMsgs.forEach( function(error) { %>
                    <% if (error.questionId=="telephone") { %>
                    <span class="error-message">
                       <%= error.fieldSolution %>
                    </span>
                    <% } %>
                    <% }) %>
                    <% } %>
                </legend>
                <input type="tel" id="phone" class="form-control phone" autocomplete="off" name="telephone" aria-required="true" value="<% if(form_values){%><%=form_values.telephone%><%} %>">
            </fieldset>
        </div>

        <div class="form-group <% if (error_report && error_report[1][0].erroneousFields.indexOf('feedback_consent')>-1) { %>error<% } %>" >
            <h2 class="form-label-bold">Feedback</h2>
            <p class="text">Can we contact you for feedback to help improve this service? For more information see the <a href="/terms-and-conditions"  target="_blank">privacy policy<span class="visually-hidden"> opens in new window</span></a>.</p>
            <fieldset class="inline" id="legend-feedback" aria-required="true" role="radiogroup">
            <legend id="legend_feedback_consent" class="<% if (error_report && error_report[1][0].erroneousFields.indexOf('feedback_consent')>-1) { %>show<% } else { %>hide<% } %>">
                <% if (error_report) { %>
                <% error_report[0][0].errMsgs.forEach( function(error) { %>
                <% if (error.questionId=="feedback_consent") { %>
                <span class="error-message">
                       <%= error.fieldSolution %>
                    </span>
                <% } %>
                <% }) %>
                <% } %>
            </legend>

            <%var feedback_consent = form_values.feedback_consent;%>

                <span class="visually-hidden">Can we contact you for feedback to help improve this service?</span>
                <%console.log(feedback_consent);%>
                <label class="block-label <%if(typeof(feedback_consent)!='undefined' && feedback_consent && feedback_consent!= null){%>selected <%}%>" for="radio-feedback-yes" >
                    <input id="radio-feedback-yes" type="radio"  name="feedback_consent" value=true <%if(typeof(feedback_consent)!='undefined' && feedback_consent && feedback_consent!= null){%>checked <%}%>>
                    Yes
                </label>
                <label class="block-label <%if(typeof(feedback_consent)!='undefined' && !feedback_consent && feedback_consent!= null){%>selected <%}%>" for="radio-feedback-no">
                    <input id="radio-feedback-no"  type="radio" name="feedback_consent" value=false <%if(typeof(feedback_consent)!='undefined' && !feedback_consent && feedback_consent!= null){%>checked <%}%>>
                    No
                </label>
            </fieldset>
        </div>

        <button class="button" type="submit">Save</button>
    </form>

</div>

<% include ../partials/footer.ejs %>