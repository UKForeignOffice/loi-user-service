                    <% primaryAddressErrors.forEach( function(errorItem) { %>
                        <% if (errorItem.questionId == "email") { %>
                            <%= errorItem.fieldError %>
                        <% } %>
                    <% }) %>
                <% } %>
            </span>

            <input class="govuk-input govuk-!-width-one-half" type="text" id="email" name="email" value="<%if(form_values[0]){%><%= form_values[0].email || ''%><%} else if (form_values) { %><%= form_values.email || ''%><% } else {%><%= contact_email %><%}%>">
